include buttons

block table
    table.table
        thead
            tr
                th.col Processo
                th.col Accordion
                th.col Autor
                th.col Data
                th.col Topic
                th.col Tribunal de Origem
                th.col
        tbody
            each elem in table_data.results
                tr
                    td
                        a(href="/accordion/" + elem.Processo) #{elem.Processo}
                    td #{elem.Acord√£o}
                    td #{elem.Autor}
                    td #{elem.Data}
                    td #{elem.Tema}
                    td #{elem.Tribunal}
                    td.text-end
                        +favorite_button(elem.Processo, user.favorites)
                        if user.level === "Administrador"
                            +edit_button(elem.Processo)
                            +delete_button(elem.Processo)


    block pagination
        include pagination
