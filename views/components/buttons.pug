mixin favorite_button(id, favorites)
    - var checked = favorites.includes(id)

    if checked
        a.btn.text-warning.remove-border(href="#")
            i.bi.bi-star-fill
    else
        a.btn.text-warning.remove-border(href="#")
            i.bi.bi-star

mixin edit_button(id)
    a.btn.text-warning.remove-border(href="#")
        i.bi.bi-pencil-fill

mixin delete_button(id)
    a.btn.text-danger.remove-border(href="#")
        i.bi.bi-x-circle-fill