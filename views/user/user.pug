extends ../components/base
include ../components/generic

block content 
    .container.main-page
        .row
            .col-12
                include ../components/breadcrumb
                    li.breadcrumb-item.active(aria-current="page") Página do Utilizador
        .row
            .col-9
                .card
                    .card-header
                        h4.mb-0
                            i.bi.bi-archive.me-2
                            | Favoritos
                    .card-body
                        - var table_data = userAccordions
                        - var data_name = "Acordãos"
                        include ../components/accordions_table
            .col-3
                .card.mb-4
                    .card-header
                        h4.mb-0
                            i.bi.bi-person.me-2
                            | Informação Basica
                    .card-body
                        +card_entry("Nome", user.name)
                        +card_entry("Username", user.username)
                        +card_entry("Email", user.email)
                        +card_entry("Afiliação", user.afiliation)

                .card.mb-4
                    .card-header
                        h4.mb-0
                            i.bi.bi-info-circle.me-2
                            | Outra Informação
                    .card-body
                        h6.fw-normal
                            p.fw-bold.d-inline Acesso: 
                            p.d-inline
                                +labelLevel(user.level)
                        +card_entry("Data de Criação", user.dateCreated)
                        +card_entry("Último login", user.lastAccess)
                .row.me-1.ms-1
                    a.btn.btn-primary(href="/users/edit") Editar Perfil
