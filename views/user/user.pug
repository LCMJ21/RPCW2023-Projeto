extends ../components/base

block content 
    .container.main-page
        .row
            .col-8
                .card
                    .card-header
                        h4.mb-0
                            i.bi.bi-archive.me-2
                            | Favoritos
                    .card-body
                        - var table_data = userAccordions
                        - var data_name = "Acordãos Favoritos"
                        include ../components/accordions_table
            .col-4

                .card.mb-4
                    .card-header
                        h4.mb-0
                            i.bi.bi-person.me-2
                            | Informação Basica
                    .card-body
                        h6.fw-normal
                            p.fw-bold.d-inline Nome: 
                            p.d-inline #{user.name}
                        h6.fw-normal
                            p.fw-bold.d-inline Email: 
                            p.d-inline #{user.email}
                        h6.fw-normal
                            p.fw-bold.d-inline Afiliação: 
                            p.d-inline #{user.afiliation}

                .card.mb-4
                    .card-header
                        h4.mb-0
                            i.bi.bi-info-circle.me-2
                            | Outra Informação
                    .card-body
                        h6.fw-normal
                            p.fw-bold.d-inline Acesso: 
                            p.d-inline #{user.level}
                        h6.fw-normal
                            p.fw-bold.d-inline Data de Registo: 
                            p.d-inline #{user.dateCreated}
                        h6.fw-normal
                            p.fw-bold.d-inline Data de ultimo login: 
                            p.d-inline #{user.lastAccess}
